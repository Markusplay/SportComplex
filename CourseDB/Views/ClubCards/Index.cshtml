@model IEnumerable<CourseDB.Models.ClubCard>

@{
    ViewData["Title"] = "ClubCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ClubCard Page</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitMode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.ClientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitMode.VisitModeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClubCardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClubCardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClubCardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
